<% title "Find your friends off Failin.gs" %>
<%= render "friends/friends_headline" %>
<div class="sub_nav">
  <%= render "friends/sub_nav_nav" %>
  <div class="sub_nav_body facebook_finder">
    <% if current_user.facebook? %>
      <% if @friends.none? %>
        <%= render "none_found" %>
      <% else %>
        <p>We found the following matches.</p>
        <h3 class="mod_title">Facebook Friends</h3>
        <ul>
          <%= render partial: "facebook_friend", collection: @friends %>
        </ul>
      <% end %>
    <% else %>
      <p>
        You don't have a Facebook account linked with your failin.gs account.
        Log in below to find your friends off failin.gs!
      </p>
      <%= facebook_login %>
    <% end %>
  </div>
</div>
