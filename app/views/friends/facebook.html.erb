<% title "Find your friends on Failin.gs" %>
<h2 class="knew page_title">Who's on Failin.gs? <span>Find them here!</span></h2>
<div class="sub_nav">
  <%= render "sub_nav_nav" %>
  <div class="sub_nav_body">
    <% if current_user.facebook? %>
      <% if @friends.any? %>
        <h3 class="mod_title">Your Friends</h3>
        <%= render partial: "friend", collection: @friends %>
      <% else %>
        <p>None of your friends are on failin.gs!</p>
      <% end %>
    <% else %>
      <p>
        You don't have a Facebook account linked with your failin.gs account.
        Log in below to find which of your followers and followees are on failin.gs!
      </p>
      <%= facebook_login %>
    <% end %>
  </div>
</div>
