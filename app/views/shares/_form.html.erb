<% form_for @share, url: share_path, remote: true do |f| %>
  <fieldset>
    <%= f.error_messages %>
    <%= f.text_area "emails", rows: 5 %>
    <span>Please separate emails with a comma</span>
    <p class="small">Add an additional personal message, if you want.</p>
    <textarea name="personal_message" rows="2"></textarea>
    <%= f.submit "Send emails now!" %>
  </fieldset>
<% end %>
